# Longevity RAG System - Environment Variables
# Copy this file to .env and fill in your actual values

# ===== API Keys =====
# OpenAI API (for LLM and embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# PubMed API
PUBMED_EMAIL=your_email@example.com
PUBMED_API_KEY=your_pubmed_api_key_here  # Optional but recommended

# Pinecone (if using for vector storage)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment

# ===== Database Configuration =====
# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/longevity_rag

# Neo4j (for knowledge graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# ===== Application Settings =====
# Environment
ENVIRONMENT=development  # development, staging, production

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/longevity_rag.log

# ===== RAG Configuration =====
# Model Settings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
MAX_TOKENS=2000

# Retrieval Settings
TOP_K_RESULTS=10
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# ===== Data Processing =====
# Batch Sizes
BATCH_SIZE=32
MAX_WORKERS=4

# Rate Limiting
PUBMED_REQUESTS_PER_SECOND=3
API_RATE_LIMIT=100

# ===== Monitoring & Error Tracking =====
# Sentry (optional)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# ===== Security =====
# API Authentication
API_SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== Feature Flags =====
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_BIOMARKER_ANALYSIS=false
ENABLE_CACHING=true

# ===== Performance =====
CACHE_TTL=3600  # seconds
MAX_MEMORY_MB=4096
ENABLE_GPU=false
